@import 'nib'
global-reset()

grey = rgb(224, 224, 224)
darkgrey = #5b5b5b
black = #544d55

// A list of background images, applied in the dental-services-provided list
family-portrait = url("http://upload.wikimedia.org/wikipedia/commons/d/df/Family_Portrait.jpg")
general-dentist = url("http://upload.wikimedia.org/wikipedia/commons/9/9f/US_Navy_110416-F-HS649-112_Royal_Australian_navy_dentist_Lt._Shannon_Godfrey_uses_anesthesia_on_a_Tongan_woman_before_extracting_a_tooth_during_Pac.jpg")
cosmetic-veneers = url("http://www.dentistryonsheppard.com/img/smiles/cosmetic-veneers-172-177.jpg")
gold-crown = url("http://upload.wikimedia.org/wikipedia/commons/0/00/Crown_dentistry_gold_03_lateral.jpg")
root-canal = url("http://upload.wikimedia.org/wikipedia/commons/b/b3/Root_canal_on_a_patient.jpg")
gum-disease = url("http://upload.wikimedia.org/wikipedia/commons/c/cd/Dentist.2.jpg")
tooth-polishing = url("http://upload.wikimedia.org/wikipedia/commons/2/28/Tooth_polishing_9332.JPG")
oral-cancer = url("http://upload.wikimedia.org/wikipedia/commons/3/3c/Ca_in_situ,_cervix.jpg")
medical-card = url("http://www.northernsound.ie/wp-content/uploads/2014/02/medical-cards.jpg")

// Mixin for creating headings
hx()
  font-weight 700
  letter-spacing 0.125em
  text-transform uppercase
  color darkgrey

// Mixin for creating buttons
button()
  hx()
  border-radius 4px
  background black
  color white
  font-size 0.9em
  padding 0 1.5em
  text-decoration none
  min-width 15em
  line-height 3.25em
  display inline-block
  transition color 0.3s linear, background-color 0.3s linear
  &:hover
    color black
    background-color grey


html
  height 100%

body
  height 100%
  min-width 100%
  line-height 1.75em
  font-weight 400
  font-family 'Source Sans Pro', sans-serif
  font-size 12pt
  @media screen and (min-width: 720px)
    font-size 13pt
  @media screen and (min-width: 1080px)
    font-size 14pt
  @media screen and (min-width: 1680px)
    font-size 16pt
  background white
  color #6e6e6e

h1, h2, h3
  hx()

p
  text-align center
  img
    vertical-align middle

header
  background-image    url("top-1280.svg"),  url("overlay.png"),   url("header.jpg")
  background-size     1280px 184px,         auto,                 cover;
  background-position bottom center,        top left,             center center
  background-repeat   repeat-x,             repeat,               no-repeat
  @media screen and (min-width: 1280px)
    background-image  url("top-1600.svg"),  url("overlay.png"),   url("header.jpg")
    background-size   1600px 184px,         auto,                 cover;
  @media screen and (min-width: 1280px)
    background-image  url("top-3200.svg"),  url("overlay.png"),   url("header.jpg")
    background-size   3200px 460px,         auto,                 cover;

  padding 1em 2em 7em 2em

  color transparentify(white, 0.8)
  position relative
  text-align center

  h1
    font-size 1.25em
    @media screen and (min-width: 720px)
      font-size 2em
    @media screen and (min-width: 1080px)
      font-size 2.25em
    @media screen and (min-width: 1680px)
      font-size 2.5em
    color white
    text-align center
    margin-bottom 1em
    &:before
      content ''
      display block
      background-image url("logo.png")
      background-position center
      background-repeat no-repeat
      background-size contain
      height 5em
      text-align center
      margin-bottom 1em

  p
    line-height 1.65em
    margin 0.25em 0 0 0

h2
  text-align  center
  &:before
    display: block
    content ''
    height: 0.25em
    margin: 1em
    border-top 1px solid rgba(224, 224, 224, 0.75)
    border-bottom 1px solid rgba(224, 224, 224, 0.75)
  &:after
    display: block
    content ''
    margin: 1em
    height: 0.25em
    border-top 1px solid rgba(224, 224, 224, 0.75)
    border-bottom 1px solid rgba(224, 224, 224, 0.75)
    
#dental-services-provided+ul
  width 100% !important
  box-sizing border-box
  li
    padding 15em 1em 1em 1em
    margin 1em
    box-sizing border-box
    display block
    border 1px solid transparentify(grey, 0.75)
    text-align center
    position relative
    &:before
      content ''
      background-color grey
      height 15em
      position absolute
      top 0
      left 0
      width 100%
      overflow hidden
      background-size cover
      background-position top center
      background-repeat no-repeat
    h3
      margin-top 1em
    @media screen and (min-width: 640px)
      border none
      height 15em
      padding-top 1em
      padding-left 50%
      margin-top 0
      margin-bottom 0
      vertical-align middle
      &:before
        width 50%
      &:nth-child(even)
        padding-left 1em
        padding-right 50%
        &:before
          left auto
          right 0
    &:nth-of-type(1)
      &:before
        background-image family-portrait
    &:nth-of-type(2)
      &:before
        background-image general-dentist
    &:nth-of-type(3)
      &:before
        background-image cosmetic-veneers
    &:nth-of-type(4)
      &:before
        background-image gold-crown
    &:nth-of-type(5)
      &:before
        background-image root-canal
    &:nth-of-type(6)
      &:before
        background-image gum-disease
    &:nth-of-type(7)
      &:before
        background-image tooth-polishing
    &:nth-of-type(8)
      &:before
        background-image oral-cancer
    &:nth-of-type(9)
      &:before
        background-image medical-card

#opening-hours+table
  width 100%
  table-layout fixed
  td:first-child
    text-align right
    padding-right: 1em
    hx()
  td:last-child
    padding-left: 1em
    text-align left
  margin-bottom 1em

#prices+p
  a[href='/prices.pdf']
    button()
    margin 1em

footer
  margin-top 1em
  padding 1em
  font-size 0.75em
  background-color grey
  background-image url("overlay.png")
  color white
