@import 'nib'
global-reset()

html
  height 100%

body
  height 100%
  min-width 100%
  line-height 1.75em
  font-weight 400
  font-family 'Source Sans Pro', sans-serif
  font-size 12pt
  @media screen and (min-width: 720px)
    font-size 13pt
  @media screen and (min-width: 1080px)
    font-size 14pt
  @media screen and (min-width: 1680px)
    font-size 16pt
  background white

header
  background-image    url("top-1280.svg"),  url("overlay.png"),   url("header.jpg")
  background-size     1280px 184px,         auto,                 cover;
  background-position bottom center,        top left,             center center
  background-repeat   repeat-x,             repeat,               no-repeat

  padding 1em 2em 7em 2em

  color transparentify(white, 0.8)
  position relative
  text-align center

  h1
    font-size 1.25em
    @media screen and (min-width: 720px)
      font-size 2em
    @media screen and (min-width: 1080px)
      font-size 2.25em
    @media screen and (min-width: 1680px)
      font-size 2.5em
    color white
    font-weight 700
    letter-spacing 0.125em
    text-transform uppercase
    text-align center
    margin-bottom 1em
    &:before
      content ''
      display block
      background-image url("logo.png")
      background-position center
      background-repeat no-repeat
      background-size contain
      height 5em
      text-align center
      margin-bottom 1em

  p
    line-height 1.65em
    margin 0.25em 0 0 0

